<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_input_view" >
        
	<com.sinovoice.pathfinder.SVKeyboardHwrView
	    android:id="@+id/hwr_keyboard_view"
	    android:layout_width="wrap_content"
	    android:layout_height="match_parent"
	    android:layout_alignParentRight="true" />
		    
    <com.sinovoice.pathfinder.hcicloud.hwr.StrokeView
        android:id="@+id/hwr_stoke_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@id/hwr_keyboard_view" />
    
    <TextView 
        android:id="@+id/hwr_logo_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:textColor="@color/white"
        android:layout_margin="5dp"
        android:text="@string/logo_text" />
	
</RelativeLayout>